
#todos {
  >ul {
    padding: 0;
    list-style: none;
    &:first-child >li {
      padding: .75rem .5rem;
      border:.1rem solid $supColorThree;
      border-radius: $borderRadiusNormal;
      margin-bottom: 5px;
      &:hover {
        box-shadow: 1px 1px 5px;
      }
    }
    &:last-child >li {
      float: right;
      padding: .25rem .5rem;
      &:hover {
        cursor: pointer;
        border-radius:5px;
        background-color: $supColorTwo;
      } 
    }
  }
}